<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <style>
        :root { --bg: #000000; --card: #0f172a; --blue: #3b82f6; --border: #1e293b; --hint: #94a3b8; }
        body { background: var(--bg); color: white; font-family: -apple-system, sans-serif; margin: 0; padding: 15px; padding-bottom: 100px; }
        
        .promo-banner { background: #fbbf24; color: black; padding: 10px; font-weight: bold; font-size: 13px; text-align: center; margin: -15px -15px 15px -15px; }
        .service-card { background: var(--card); border: 1px solid var(--blue); border-radius: 12px; padding: 15px; margin-bottom: 15px; }
        .service-title { color: var(--blue); font-weight: bold; font-size: 18px; margin-bottom: 10px; }
        
        /* Interactive Crypto Button */
        .crypto-btn { background: #1e293b; border: 1px solid var(--blue); color: var(--blue); padding: 8px 15px; border-radius: 20px; font-size: 13px; font-weight: 600; cursor: pointer; transition: 0.2s; }
        .crypto-btn.selected { background: var(--blue); color: white; }

        .balance-bar { background: var(--blue); border-radius: 10px; padding: 12px 15px; display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px; }
        
        /* Interactive Toggles */
        .toggle-row { display: flex; gap: 8px; margin-bottom: 20px; }
        .toggle { flex: 1; padding: 12px; border-radius: 8px; border: 1px solid var(--border); background: var(--card); color: white; font-weight: 600; cursor: pointer; transition: 0.2s; }
        .toggle.active { background: var(--blue); border-color: var(--blue); }

        .field { margin-bottom: 15px; }
        label { display: block; font-size: 12px; color: var(--hint); margin-bottom: 6px; font-weight: 600; text-transform: uppercase; }
        input { width: 100%; background: #0a0a0a; border: 1px solid var(--border); border-radius: 6px; color: white; padding: 12px; box-sizing: border-box; outline: none; }
        input:focus { border-color: var(--blue); }

        .footer { position: fixed; bottom: 0; left: 0; right: 0; padding: 15px; background: var(--bg); border-top: 1px solid var(--border); }
        .submit { width: 100%; background: #334155; color: #94a3b8; border: none; padding: 15px; border-radius: 8px; font-size: 16px; font-weight: 600; cursor: not-allowed; transition: 0.3s; }
        .submit.ready { background: var(--blue); color: white; cursor: pointer; }
    </style>
</head>
<body>
    <div class="promo-banner">Enjoy 10% on Crypto Deposits</div>

    <div class="service-card">
        <div class="service-title">40% OFF + FREE DELIVERY</div>
        <div style="font-size: 14px; margin-bottom: 15px;">Subtotals between $15‚Äì$25</div>
        <label>Payment Method:</label>
        <button class="crypto-btn" id="cryptoBtn" onclick="selectPayment()">‚Çø Crypto</button>
    </div>

    <div class="balance-bar">
        <div>
            <div style="font-size: 11px; opacity: 0.8;">Balance</div>
            <div style="font-size: 18px; font-weight: bold;">$0.00</div>
        </div>
        <div style="font-size: 12px; font-weight: bold;">Add Funds +</div>
    </div>

    <div class="toggle-row">
        <button class="toggle active" id="btnDeliv" onclick="setMode('Delivery')">üö≤ Delivery</button>
        <button class="toggle" id="btnPick" onclick="setMode('Pickup')">üõç Pickup</button>
    </div>

    <div class="field">
        <label>Group Order Link *</label>
        <input type="text" id="link" placeholder="https://drd.sh/cart/..." oninput="validate()">
    </div>

    <div class="field">
        <label>Delivery Address *</label>
        <input type="text" id="address" placeholder="2005 E Hoffman St, Baltimore, MD" oninput="validate()">
    </div>

    <div style="display: flex; gap: 10px;">
        <div class="field" style="flex: 1;"><label>Apt/Suite</label><input type="text" id="apt"></div>
        <div class="field" style="flex: 1;"><label>Phone *</label><input type="tel" id="phone" oninput="validate()"></div>
    </div>

    <div class="footer">
        <button class="submit" id="submitBtn" onclick="send()">Continue to Order</button>
    </div>

    <script>
        const tg = window.Telegram.WebApp;
        tg.expand();
        
        let selectedMode = "Delivery";
        let cryptoSelected = false;

        function setMode(mode) {
            selectedMode = mode;
            document.getElementById('btnDeliv').classList.toggle('active', mode === 'Delivery');
            document.getElementById('btnPick').classList.toggle('active', mode === 'Pickup');
        }

        function selectPayment() {
            cryptoSelected = !cryptoSelected;
            document.getElementById('cryptoBtn').classList.toggle('selected', cryptoSelected);
        }

        function validate() {
            const link = document.getElementById('link').value;
            const addr = document.getElementById('address').value;
            const phone = document.getElementById('phone').value;
            const btn = document.getElementById('submitBtn');
            
            if(link && addr && phone) {
                btn.classList.add('ready');
                btn.disabled = false;
            } else {
                btn.classList.remove('ready');
                btn.disabled = true;
            }
        }

        function send() {
            const data = {
                mode: selectedMode,
                crypto: cryptoSelected,
                link: document.getElementById('link').value,
                address: document.getElementById('address').value,
                apt: document.getElementById('apt').value,
                phone: document.getElementById('phone').value
            };
            tg.sendData(JSON.stringify(data));
            tg.close();
        }
    </script>
</body>
</html>
